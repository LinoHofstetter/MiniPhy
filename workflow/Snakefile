from snakemake.utils import min_version

min_version("6.2.0")

shell.prefix("set -euo pipefail")

report: "report/workflow.rst"

##### Target rules #####

include: "rules/init.smk"

## WILDCARD CONSTRAINTS
wildcard_constraints:
    sample=r"[a-zA-Z0-9_-]+",
    batch=r"[a-zA-Z0-9_-]+",
    protocol=r"(asm|pre|post)",

