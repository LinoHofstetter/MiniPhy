##### New Rule to Generate clustered_fastas.tsv #####

rule generate_clustered_fastas:
    input:
        "{input_data_file}.tsv.xz"  # No fixed directory specified
    output:
        "output/clustered_fastas.tsv"
    shell:
        """
        python create_batches.py {input}
        """
